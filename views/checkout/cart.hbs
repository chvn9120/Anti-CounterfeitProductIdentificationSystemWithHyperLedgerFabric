    <script>
        $('.p-qty').on('input', function () {
            let quantity = $(this).val();
            let price = $(this).closest('tr').find('.p-price').attr('value');
            let total = quantity * price;

            $(this).closest('tr').find('.total').text(total.toLocaleString('it-IT', { style: 'currency', currency: 'VND' }));

            let pid = $(this).closest('tr').find('.pid').text()

            $.post('/user/cart', { pQty: quantity, p_id: pid, inCartPage: true }, function (response) {
                if (response.OK) {
                    // do something if needed
                }
            })
        });

        $('.p-qty').trigger('input');
    </script>
