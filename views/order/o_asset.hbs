<head>
    <link rel="stylesheet" href="/stylesheets/order.detail.css">
</head>

<body>
    {{> (lookup . 'header') }}
    <section style="margin-top: 100px; background-color: #1a1814;">
        <div class="container">
            <div class="row my-2">
                <i>
                    <h1 style="color: #cda45e;">Danh sách tài sản</h1>
                </i>
            </div>
            <div class="row">
                {{#if assets}}
                {{#each assets}}
                <div class="col-xl-6">
                    <div class="card border shadow-none">
                        <div class="card-body">
                            <div class="d-flex align-items-start pb-3">
                                <div class="me-4">
                                    <img src="{{p_thumbnail_image}}" alt="" class="avatar-lg rounded">
                                </div>
                                <div class="flex-grow-1 overflow-hidden">
                                    <div>
                                        <h5 class="d-flex justify-content-between" style="max-width: 490px;">
                                            <a href="/product/{{p_id}}" class="text-dark text-truncate ">{{p_name}}
                                            </a>
                                        </h5>
                                        <span class="text-secondary p-0"><i>Mã tài sản: {{ID}}</i></span>
                                        <p class="text-secondary p-0"><i>Mã sản phẩm: {{p_id}}</i></p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <span class="text-muted mb-2">Đơn giá: </span>
                                            <span class="text-muted mb-2 p-price" value="{{price}}"><i>{{vndDisplay
                                                    price}}</i></span>
                                        </div>
                                        <div>
                                            <span class="text-muted mb-2">Mua lúc: </span>
                                            <span class="text-muted mb-2">{{time}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="d-flex justify-content-center">
                    <i>
                        <p>Bạn chưa sở hữu tài sản nào!</p>
                    </i>
                </div>
                {{/if}}
            </div>

    </section>


    {{> (lookup . 'footer') }}

</body>

<script>
    const cl = console.log
    let subTotal = tax = 0;

    $('.totalARow').each(function () {
        let quantity = $(this).closest('.row').find('.p-qty').text();
        let price = $(this).closest('.row').find('.p-price').attr('value');
        let totalARow = quantity * price;

        $(this).text(totalARow.toLocaleString('it-IT', {
            style: 'currency', currency: 'VND'
        }));

        subTotal += totalARow
        $('.sub-total').text(subTotal.toLocaleString('it-IT', {
            style: 'currency', currency: 'VND'
        }))

        tax = subTotal * 8 / 100 // 8%
        $('.tax').text(tax.toLocaleString('it-IT', {
            style: 'currency', currency: 'VND'
        }))

        $('.total').text((tax + subTotal).toLocaleString('it-IT', {
            style: 'currency', currency: 'VND'
        }))
    })
</script>